#!/bin/bash

function die() {
    echo "$*" 1>&2
    exit 1
}

function usage() {
    for skel in $(cd ~/skel ; ls)
    do
        desc=~/skel/$skel/.description
        printf "%-20s" $skel
        [ -f $desc ] && cat $desc || echo "??"
    done
    exit 0
}

function update_link() {
    local target="$1"
    local link=$( basename $target )
    [ -L ~/skel/$link ] && return
    ln -s $target ~/skel/$link
}

# Make sure all skel pointers are up to date
function evergreen() {
    mkdir -p ~/skel
    for target in ~/ws/github/automation/skel/* ~/ws/automation/skel/*
    do
        update_link $target
    done
}

function scaffold() {
    [ -d ~/skel/"$1" ] || die "Unknown skel ($1)"
    ( cd ~/skel/"$1" ; tar cf - . ) | tar xf -
    [ -x .hooks/post_create ] && .hooks/post_create
}

evergreen
[ X$1 = X ] && usage
# export SKEL="$1"
# shift
# export SKEL_ARGS="$@"

case "$1" in
--help) usage ;;
--*) die "unknown option" ;;
*)  export SKEL="$1"
    shift
    export SKEL_ARGS="$@"
    ;;
esac

scaffold "$SKEL"

# vim: ai et sw=4
