#!/bin/bash

function usage() {
    cd ~/skel ; ls
    exit 0
}

function update_link() {
    local target="$1"
    local link=$( basename $target )
    [ -L ~/skel/$link ] && return
    ln -s $target ~/skel/$link
}

function evergreen() {
    mkdir -p ~/skel
    for target in ~/ws/github/automation/skel/* ~/ws/automation/skel/*
    do
        update_link $target
    done
}

function scaffold() {
    ( cd ~/skel/"$1" ; tar cf - . ) | tar xf -
}

evergreen
[ X$1 = X ] && usage
scaffold "$1"

# vim: ai et sw=4
